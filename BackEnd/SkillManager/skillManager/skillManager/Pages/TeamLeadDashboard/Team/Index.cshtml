@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle level selection - SIMPLIFIED VERSION
            document.querySelectorAll('.level-option').forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();

                    const levelId = this.getAttribute('data-level-id');
                    const levelName = this.getAttribute('data-level-name');
                    const form = this.closest('form');
                    const levelInput = form.querySelector('.level-input');
                    const dropdownToggle = form.querySelector('.level-dropdown');
                    const levelNameSpan = form.querySelector('.level-name');

                    // Update the hidden input value
                    levelInput.value = levelId;

                    // Update the dropdown button text
                    levelNameSpan.textContent = levelName;

                    // Remove all existing level color classes
                    const levelClasses = ['level-expert', 'level-maitrise', 'level-pratique', 'level-notion'];
                    levelClasses.forEach(levelClass => {
                        dropdownToggle.classList.remove(levelClass);
                    });

                    // Add the new level color class
                    const newLevelClass = 'level-' + levelName.toLowerCase();
                    dropdownToggle.classList.add(newLevelClass);

                    // Submit the form immediately
                    console.log('Submitting form for user:', form.querySelector('input[name="userId"]').value,
                                'skill:', form.querySelector('input[name="skillId"]').value,
                                'level:', levelId);
                    form.submit();
                });
            });

            // Auto-collapse other category types when one is opened (if you add categories later)
            var categoryTypeHeaders = document.querySelectorAll('.category-type-header');
            categoryTypeHeaders.forEach(function(header) {
                header.addEventListener('click', function() {
                    var target = this.getAttribute('href');
                    var collapseElement = document.querySelector(target);

                    // Toggle chevron icon
                    var icon = this.querySelector('.bi-chevron-down');
                    if (icon) {
                        icon.classList.toggle('bi-chevron-down');
                        icon.classList.toggle('bi-chevron-up');
                    }
                });
            });
        });
    </script>
}
@functions {
    private string GetSortUrl(string sortField)
    {
        var currentSort = Model.SortBy;
        var newSort = "";

        if (currentSort == $"{sortField}Asc")
        {
            newSort = $"{sortField}Desc";
        }
        else
        {
            newSort = $"{sortField}Asc";
        }

        return $"?SelectedUser={Model.SelectedUser}&SelectedCategory={Model.SelectedCategory}&SelectedSkill={Model.SelectedSkill}&SelectedLevel={Model.SelectedLevel}&SortBy={newSort}";
    }

    private string GetSortIcon(string sortField)
    {
        var currentSort = Model.SortBy;

        if (currentSort == $"{sortField}Asc")
        {
            return "<i class='bi bi-arrow-up'></i>";
        }
        else if (currentSort == $"{sortField}Desc")
        {
            return "<i class='bi bi-arrow-down'></i>";
        }

        return "<i class='bi bi-arrow-down-up text-muted'></i>";
    }

    private string GetLevelBadgeClass(string levelName)
    {
        return levelName?.ToLower() switch
        {
            "expert" => "level-expert",
            "maitrise" => "level-maitrise",
            "pratique" => "level-pratique",
            "notion" => "level-notion",
            _ => "level-notion"
        };
    }

    private string GetLevelProgressBarClass(string levelName)
    {
        return levelName?.ToLower() switch
        {
            "expert" => "bg-expert",
            "maitrise" => "bg-maitrise",
            "pratique" => "bg-pratique",
            "notion" => "bg-notion",
            _ => "bg-notion"
        };
    }

    private string GetLevelColorClass(string levelName)
    {
        return levelName?.ToLower() switch
        {
            "expert" => "level-expert",
            "maitrise" => "level-maitrise",
            "pratique" => "level-pratique",
            "notion" => "level-notion",
            _ => "level-notion"
        };
    }
}
 
