<div class="container-fluid">
    <div class="row">
        <!-- Sidebar - Light Mode -->
        <div class="col-lg-2 col-md-3 d-md-block sidebar collapse bg-light border-end p-0">
            <div class="position-sticky pt-3">
                <!-- Sidebar Header -->
                <div class="text-center p-3 border-bottom">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-briefcase-fill me-2"></i>My Team
                    </h5>
                </div>

                <!-- Navigation Menu -->
                <!-- Navigation Menu -->
                <ul class="nav flex-column mt-3">
                    <li class="nav-item">
                        <a href="/TeamLeadDashboard" class="nav-link text-dark sidebar-link rounded mx-2">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/TeamLeadDashboard/Team" class="nav-link active text-dark sidebar-link rounded mx-2">
                            <i class="bi bi-people me-2"></i>My Team
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/TeamLeadDashboard/LastUpdated" class="nav-link text-dark sidebar-link rounded mx-2">
                            <i class="bi bi-clock-history me-2"></i>Last Updated
                        </a>
                    </li>
                </ul>

              
            </div>
        </div>


        <!-- Main Content -->
        <div class="col-lg-10 col-md-9 ms-sm-auto px-md-4 main-content">
            <!-- Mobile Toggle Button -->
            <div class="d-md-none py-2">
                <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target=".sidebar">
                    <i class="bi bi-list"></i> Menu
                </button>
            </div>

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-people-fill me-2 text-primary"></i>Team Lead Dashboard</h2>
                <div class="text-end">
                    <h5 class="text-muted">@Model.TeamLeadName</h5>
                    <small class="text-muted">@Model.TeamName Team</small>
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Summary Cards -->
            <div class="row text-center mb-4">
                <div class="col-md-3">
                    <div class="card shadow-sm p-3 bg-primary text-white">
                        <h5>Team Members</h5>
                        <h2>@Model.UniqueTeamMembers</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm p-3 bg-success text-white">
                        <h5>Avg Team Level</h5>
                        <h2>@Model.TeamAverageLevel.ToString("F1")</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm p-3 bg-info text-white">
                        <h5>Total Skills</h5>
                        <h2>@Model.TotalTeamSkills</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm p-3 bg-warning text-white">
                        <h5>Last Update</h5>
                        <h4>@(Model.LastTeamUpdate?.ToString("MMM dd") ?? "Never")</h4>
                    </div>
                </div>
            </div>

            <!-- Filter and Sort Controls -->
            <div class="col-md-2 mb-3 d-flex align-items-end">
                <form method="get" asp-page="/ManagerDashboard/Team/Index">
                    <input type="hidden" name="handler" value="Export" />
                    <input type="hidden" name="SelectedUser" value="@Model.SelectedUser" />
                    <input type="hidden" name="SelectedCategory" value="@Model.SelectedCategory" />
                    <input type="hidden" name="SelectedSkill" value="@Model.SelectedSkill" />
                    <input type="hidden" name="SelectedLevel" value="@Model.SelectedLevel" />
                    <input type="hidden" name="SortBy" value="@Model.SortBy" />

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-file-earmark-excel me-2"></i>Export to Excel
                    </button>
                </form>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-funnel me-2"></i>Filter & Sort
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <!-- User Filter -->
                        <div class="col-md-3">
                            <label for="SelectedUser" class="form-label">Team Member</label>
                            <select class="form-select" asp-for="SelectedUser" onchange="this.form.submit()">
                                <option value="All">All Team Members</option>
                                @foreach (var user in Model.AvailableUsers)
                                {
                                    <option value="@user">@user.Split('-')[1]</option>
                                }
                            </select>
                        </div>

                        <!-- Category Filter -->
                        <div class="col-md-2">
                            <label for="SelectedCategory" class="form-label">Category</label>
                            <select class="form-select" asp-for="SelectedCategory" onchange="this.form.submit()">
                                <option value="All">All Categories</option>
                                @foreach (var category in Model.AvailableCategories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                        </div>

                        <!-- Skill Filter -->
                        <div class="col-md-2">
                            <label for="SelectedSkill" class="form-label">Skill</label>
                            <select class="form-select" asp-for="SelectedSkill" onchange="this.form.submit()">
                                <option value="All">All Skills</option>
                                @foreach (var skill in Model.AvailableSkills)
                                {
                                    <option value="@skill">@skill</option>
                                }
                            </select>
                        </div>

                        <!-- Level Filter -->
                        <div class="col-md-2">
                            <label for="SelectedLevel" class="form-label">Level</label>
                            <select class="form-select" asp-for="SelectedLevel" onchange="this.form.submit()">
                                <option value="All">All Levels</option>
                                @foreach (var level in Model.AvailableLevels)
                                {
                                    <option value="@level">@level</option>
                                }
                            </select>
                        </div>

                        <!-- Sort By -->
                        <div class="col-md-2">
                            <label for="SortBy" class="form-label">Sort By</label>
                            <select class="form-select" asp-for="SortBy" onchange="this.form.submit()">
                                <option value="">Default</option>
                                <option value="UserNameAsc">User Name (A-Z)</option>
                                <option value="UserNameDesc">User Name (Z-A)</option>
                                <option value="SkillNameAsc">Skill Name (A-Z)</option>
                                <option value="SkillNameDesc">Skill Name (Z-A)</option>
                                <option value="CategoryAsc">Category (A-Z)</option>
                                <option value="CategoryDesc">Category (Z-A)</option>
                                <option value="LevelAsc">Level (Low-High)</option>
                                <option value="LevelDesc">Level (High-Low)</option>
                                <option value="UpdatedAsc">Last Updated (Old-New)</option>
                                <option value="UpdatedDesc">Last Updated (New-Old)</option>
                            </select>
                        </div>

                        <!-- Reset Button -->
                        <div class="col-md-1 d-flex align-items-end">
                            <a href="/ManagerDashboard/Team" class="btn btn-outline-secondary w-100">Reset</a>
                        </div>
                    </form>
                </div>
            </div>

