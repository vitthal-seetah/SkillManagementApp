                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    <span class="fw-bold text-primary">
                                                        @skill.FirstName[0]@skill.LastName[0]
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 text-primary">@skill.FirstName @skill.LastName</h6>
                                                    <small class="text-muted">ID: @skill.UserId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>@skill.SkillName</strong>
                                            <br><small class="text-muted">@skill.SkillCode</small>
                                        </td>
                                        <td>@skill.CategoryName</td>
                                        <td>
                                            <span class="badge bg-secondary">@skill.CategoryType</span>
                                        </td>
                                        <td>
                                            <span class="badge @GetLevelBadgeClass(skill.LevelName)">@skill.LevelName</span>
                                            <div class="progress mt-1" style="height: 6px; width: 80px;">
                                                <div class="progress-bar @GetLevelProgressBarClass(skill.LevelName)"
                                                     style="width: @(skill.LevelId * 25)%">
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted small">@skill.UpdatedTime.ToString("MMM dd, yyyy")</span>
                                        </td>
                                        <td>
                                            <!-- FORM APPROACH LIKE YOUR WORKING EXAMPLE -->
                                            <form method="post" asp-page-handler="UpdateSkillLevel" id="form-@skill.UserId-@skill.SkillId">
                                                <input type="hidden" name="userId" value="@skill.UserId" />
                                                <input type="hidden" name="skillId" value="@skill.SkillId" />
                                                <div class="dropdown">
                                                    <button class="btn btn-sm dropdown-toggle level-dropdown @GetLevelColorClass(skill.LevelName) text-start"
                                                            type="button"
                                                            id="levelDropdown-@skill.UserId-@skill.SkillId"
                                                            data-bs-toggle="dropdown"
                                                            aria-expanded="false">
                                                        <span class="level-name">@skill.LevelName</span>
                                                        <input type="hidden" name="levelId" value="@skill.LevelId" class="level-input" />
                                                    </button>
                                                    <ul class="dropdown-menu level-dropdown-menu" aria-labelledby="levelDropdown-@skill.UserId-@skill.SkillId">
                                                        <li>
                                                            <a class="dropdown-item level-option level-notion"
                                                               href="#"
                                                               data-level-id="1"
                                                               data-level-name="Notion">
                                                                <span>Notion</span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item level-option level-pratique"
                                                               href="#"
                                                               data-level-id="2"
                                                               data-level-name="Pratique">
                                                                <span>Pratique</span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item level-option level-maitrise"
                                                               href="#"
                                                               data-level-id="3"
                                                               data-level-name="Maitrise">
                                                                <span>Maitrise</span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item level-option level-expert"
                                                               href="#"
                                                               data-level-id="4"
                                                               data-level-name="Expert">
                                                                <span>Expert</span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.FilteredTeamMembers.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-users fa-2x mb-2"></i>
                                                <p>No team skills found with current filters</p>
                                                <a href="/ManagerDashboard/Team" class="btn btn-outline-primary btn-sm">Clear Filters</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
