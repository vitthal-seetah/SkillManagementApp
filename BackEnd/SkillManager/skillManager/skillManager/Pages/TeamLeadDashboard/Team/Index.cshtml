                    <h5 class="card-title mb-0">
                        <i class="bi bi-table me-2"></i>Team Skills
                        <span class="badge bg-light text-dark ms-2">@Model.FilteredTeamMembers.Count skills</span>
                    </h5>
                    <div class="text-muted small">
                        Showing @Model.FilteredTeamMembers.Count of @Model.TeamMembers.Count skills
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <a href="@GetSortUrl("UserName")" class="text-decoration-none text-dark">
                                            Team Member @Html.Raw(GetSortIcon("UserName"))
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@GetSortUrl("SkillName")" class="text-decoration-none text-dark">
                                            Skill @Html.Raw(GetSortIcon("SkillName"))
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@GetSortUrl("Category")" class="text-decoration-none text-dark">
                                            Category @Html.Raw(GetSortIcon("Category"))
                                        </a>
                                    </th>
                                    <th>Category Type</th>
                                    <th>
