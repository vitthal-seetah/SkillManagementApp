@page
@model SkillManager.Web.Pages.Skills.ManageModel
@{
    ViewData["Title"] = "Skill Management";
    bool isAdmin = Model.UserRoles.Contains("Admin");
    bool isManager = Model.UserRoles.Contains("Manager");
    bool canEdit = isAdmin || isManager;
}

<div class="container-fluid">
    <!-- Header with Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Skill Management</h2>
        <a href="/skills" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="/Categories/ManageCategories" class="btn btn-info">
                <i class="bi bi-folder me-2"></i>Manage Categories
            </a>
        </div>
        @if (isAdmin)
        {
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createSkillModal">
                <i class="bi bi-plus-circle me-2"></i>Create New Skill
            </button>
        }
    </div>

    <!-- 🔍 FILTER + SORT CONTROLS -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label for="SelectedCategoryType" class="form-label fw-semibold">Filter by Category Type</label>
                    <select name="SelectedCategoryType" id="SelectedCategoryType" class="form-select" onchange="this.form.submit()">
                        <option value="All" selected="@(Model.SelectedCategoryType == "All")">All Types</option>
                        @foreach (var categoryType in Model.CategoryTypes)
                        {
                            <option value="@categoryType.Name" selected="@(Model.SelectedCategoryType == categoryType.Name)">
                                @categoryType.Name
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="SortBy" class="form-label fw-semibold">Sort by</label>
                    <select name="SortBy" id="SortBy" class="form-select" onchange="this.form.submit()">
                        <option value="">Default</option>
                        <option value="CodeAsc" selected="@(Model.SortBy == "CodeAsc")">Code (A → Z)</option>
                        <option value="CodeDesc" selected="@(Model.SortBy == "CodeDesc")">Code (Z → A)</option>
                        <option value="NameAsc" selected="@(Model.SortBy == "NameAsc")">Name (A → Z)</option>
                        <option value="NameDesc" selected="@(Model.SortBy == "NameDesc")">Name (Z → A)</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">Apply</button>
                    <a href="/Skills/Manage" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- ✅ Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <div class="card">
        <div class="card-header bg-black">
            <h5 class="card-title mb-0 text-white">
                <i class="fas fa-tasks me-2"></i>All Skills
                <span class="badge bg-light text-dark ms-2">@Model.TotalCount entries</span>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3" style="width: 120px;">
                                <a href="@GetSortUrl("Code")" class="text-decoration-none text-dark">
                                    Code
                                    @Html.Raw(GetSortIcon("Code"))
                                </a>
                            </th>
                            <th style="width: 200px;">
                                <a href="@GetSortUrl("Name")" class="text-decoration-none text-dark">
                                    Name
                                    @Html.Raw(GetSortIcon("Name"))
                                </a>
                            </th>
                            <th style="width: 150px;">
                                <a href="@GetSortUrl("Category")" class="text-decoration-none text-dark">
                                    Category
                                    @Html.Raw(GetSortIcon("Category"))
                                </a>
                            </th>
                            <th style="width: 120px;">
                                <a href="@GetSortUrl("CategoryType")" class="text-decoration-none text-dark">
                                    Category Type
                                    @Html.Raw(GetSortIcon("CategoryType"))
                                </a>
                            </th>
                            <th style="width: 100px;">
                                <a href="@GetSortUrl("Criticality")" class="text-decoration-none text-dark">
                                    Criticality
                                    @Html.Raw(GetSortIcon("Criticality"))
                                </a>
                            </th>
                            <th style="width: 120px;">
                                <a href="@GetSortUrl("RequiredLevel")" class="text-decoration-none text-dark">
                                    Required Level
                                    @Html.Raw(GetSortIcon("RequiredLevel"))
                                </a>
                            </th>
                            <th style="width: 300px;">Description</th>
                            @if (canEdit)
                            {
                                <th style="width: 140px;" class="text-center">Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Your existing table body content remains the same -->
                        @foreach (var skill in Model.Skills)
                        {
                            var rowId = $"row-{skill.SkillId}";
                            <tr id="@rowId" class="skill-row">
                                <!-- Edit Form -->
                                <form method="post" asp-page-handler="Save" class="skill-edit-form">
                                    <input type="hidden" name="id" value="@skill.SkillId" />
                                    <input type="hidden" name="originalCode" value="@skill.Code" />
                                    <input type="hidden" name="originalCategoryId" value="@skill.CategoryId" />

                                    <!-- Code Column -->
                                <td class="ps-3">
                                    <div class="readonly-content">@skill.Code</div>
                                    <textarea name="Code" class="form-control edit-field code-field d-none"
                                          rows="1" placeholder="Enter code">@skill.Code</textarea>
                                </td>

                                <!-- Label Column -->
                                <td>
                                    <div class="readonly-content " title="@skill.Label">@skill.Label</div>
                                    <textarea name="Label" class="form-control edit-field d-none"
                                          rows="2" placeholder="Enter skill name">@skill.Label</textarea>
                                </td>

                                <!-- Category Column -->
                                <td>
                                    <div class="readonly-content">@skill.CategoryName</div>
                                    <select name="CategoryId" class="form-select edit-field category-field d-none">
                                        <option value="">Select Category</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.CategoryId" selected="@(category.CategoryId == skill.CategoryId)"
                                                    data-category-type="@category.CategoryTypeName">
                                                @category.Name
                                            </option>
                                        }
                                    </select>
                                </td>

                                <!-- Category Type Column -->
                                <td>
                                    <span class="badge bg-secondary category-type-display">@skill.CategoryTypeName</span>
                                </td>

                                <!-- Criticality Column -->
                                <td>
                                    <div class="readonly-content">@skill.CriticalityLevel</div>
                                    <input name="CriticalityLevel" class="form-control edit-field d-none"
                                           value="@skill.CriticalityLevel" placeholder="Criticality" />
                                </td>

                                <!-- Required Level Column -->
                                <td>
                                    <div class="readonly-content">
                                        <span class="badge bg-info">Level @skill.RequiredLevel</span>
                                    </div>
                                    <input name="RequiredLevel" type="number" class="form-control edit-field d-none"
                                           value="@skill.RequiredLevel" min="1" max="4" />
                                </td>

                                <!-- Description Column -->
                                <td>
                                    <div class="readonly-content description-text">@skill.FirstLevelDescription</div>
                                    <textarea name="FirstLevelDescription" class="form-control edit-field d-none"
                                          rows="3" placeholder="Enter description">@skill.FirstLevelDescription</textarea>
                                </td>

                                @if (canEdit)
                                {
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm readonly-actions">
                                            <button type="button" class="btn btn-outline-primary" onclick="enableEdit('@rowId')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@skill.SkillId, '@skill.Label.Replace("'", "\\'")')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        <div class="btn-group btn-group-sm edit-actions d-none">
                                            <button type="submit" class="btn btn-success">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" onclick="cancelEdit('@rowId')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </td>
                                }
                                </form>
                            </tr>
                        }
                        @if (!Model.Skills.Any())
                        {
                            <tr>
                                <td colspan="@(canEdit ? 8 : 7)" class="text-center py-4 text-muted">
                                    <i class="fas fa-inbox display-4 d-block mb-2"></i>
                                    No skills found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 📄 PAGINATION -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Skill pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" asp-route-PageNumber="@(Model.PageNumber - 1)"
                       asp-route-SelectedCategoryType="@Model.SelectedCategoryType"
                       asp-route-SortBy="@Model.SortBy">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-route-PageNumber="@i"
                           asp-route-SelectedCategoryType="@Model.SelectedCategoryType"
                           asp-route-SortBy="@Model.SortBy">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-route-PageNumber="@(Model.PageNumber + 1)"
                       asp-route-SelectedCategoryType="@Model.SelectedCategoryType"
                       asp-route-SortBy="@Model.SortBy">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- ➕ CREATE SKILL MODAL -->
<div class="modal fade" id="createSkillModal" tabindex="-1" aria-labelledby="createSkillLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="createSkillLabel">
                        <i class="bi bi-plus-circle me-2"></i>Create New Skill
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Code *</label>
                            <input name="Code" class="form-control" required placeholder="e.g., DIV : Gestion relation C2S & éditeur" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Name *</label>
                            <input name="Label" class="form-control" required placeholder="e.g., Web Development" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Category *</label>
                            <select name="CategoryId" class="form-select" id="createCategorySelect" required>
                                <option value="">Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryId">@category.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">SubCategory</label>
                            <select name="SubCategoryId" class="form-select" id="createSubCategorySelect">
                                <option value="">Select SubCategory</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Criticality</label>
                            <input name="CriticalityLevel" class="form-control" placeholder="e.g., P1 or P2" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Required Level</label>
                            <input name="RequiredLevel" type="number" class="form-control" min="1" max="4" placeholder="1-4" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea name="FirstLevelDescription" class="form-control" rows="4" placeholder="Enter detailed description of the skill..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i>Create Skill
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the skill:</p>
                <p class="h5 text-danger" id="deleteSkillName"></p>
                <p class="text-muted mt-3"><small>This action cannot be undone and will remove this skill from the system.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <input type="hidden" name="id" id="deleteSkillId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Skill
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .skill-row:hover {
            background-color: #f8f9fa;
        }

        .skill-edit-form {
            display: contents;
        }

        .readonly-content {
            padding: 0.375rem 0;
        }

        .table td, .table th {
            white-space: normal !important;
            word-wrap: break-word;
        }

        .description-text {
            max-height: 100px;
            overflow-y: auto;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .edit-field {
            font-size: 0.9rem;
        }

        .category-type-display {
            font-size: 0.8rem;
        }
        /* Force wrapping inside table cells */
        .table td, .table th {
            white-space: normal !important;
            word-break: break-word;
            overflow-wrap: anywhere;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
        }

        .card {
            border: 1px solid #e3e6f0;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        /* Ensure text areas resize properly */
        textarea.form-control {
            min-height: 38px;
        }

        /* Better focus states */
        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        /* Pagination styling to match Users page */
        .pagination {
            margin-bottom: 0;
        }

        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .page-link {
            color: #0d6efd;
        }

            .page-link:hover {
                color: #0a58ca;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .container-fluid {
                padding: 0 10px;
            }

            .card-body {
                padding: 1rem;
            }

            .table-responsive {
                font-size: 0.85rem;
            }

            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }

                .d-flex.justify-content-between > div {
                    width: 100%;
                    text-align: center;
                }

            .pagination {
                flex-wrap: wrap;
            }

            .page-item {
                margin-bottom: 0.5rem;
            }
        }

        .table {
            table-layout: fixed;
            width: 100%;
        }

            /* ✅ Make all cells wrap instead of truncating */
            .table th,
            .table td {
                white-space: normal !important; /* allow line breaks */
                word-break: break-word; /* break long words */
                overflow-wrap: anywhere; /* break long words if needed */
                text-overflow: unset !important; /* remove the ... */
                overflow: visible !important; /* allow multi-line content */
            }
    </style>
    <script>
        // Store original values when editing starts
        const originalValues = new Map();

        // Load subcategories for a given category ID
        async function loadSubCategories(categoryId, subCategorySelect) {
            if (!categoryId) {
                subCategorySelect.innerHTML = '<option value="">Select SubCategory</option>';
                subCategorySelect.disabled = true;
                return;
            }

            try {
                subCategorySelect.disabled = true;
                subCategorySelect.innerHTML = '<option value="">Loading subcategories...</option>';

                // Make AJAX call to get subcategories
                const response = await fetch(`?handler=SubCategories&categoryId=${categoryId}`);
                if (response.ok) {
                    const data = await response.json();

                    if (data.error) {
                        throw new Error(data.error);
                    }

                    subCategorySelect.innerHTML = '<option value="">Select SubCategory</option>';
                    data.forEach(sc => {
                        const option = document.createElement('option');
                        option.value = sc.subCategoryId;
                        option.textContent = sc.name;
                        subCategorySelect.appendChild(option);
                    });
                    subCategorySelect.disabled = false;
                } else {
                    throw new Error('Failed to load subcategories');
                }
            } catch (error) {
                console.error('Error loading subcategories:', error);
                subCategorySelect.innerHTML = '<option value="">Error loading subcategories</option>';
                subCategorySelect.disabled = true;
            }
        }

        function enableEdit(rowId) {
            const row = document.getElementById(rowId);
            const readonlyContents = row.querySelectorAll('.readonly-content');
            const editFields = row.querySelectorAll('.edit-field');
            const readonlyActions = row.querySelector('.readonly-actions');
            const editActions = row.querySelector('.edit-actions');

            // Store original values
            const originalCode = row.querySelector('input[name="originalCode"]').value;
            const originalCategoryId = row.querySelector('input[name="originalCategoryId"]').value;

            originalValues.set(rowId, {
                code: originalCode,
                categoryId: originalCategoryId
            });

            // Switch to edit mode
            readonlyContents.forEach(content => content.classList.add('d-none'));
            editFields.forEach(field => field.classList.remove('d-none'));
            readonlyActions.classList.add('d-none');
            editActions.classList.remove('d-none');

            // Focus on the first editable field
            const firstInput = row.querySelector('.edit-field');
            if (firstInput) firstInput.focus();
        }

        function cancelEdit(rowId) {
            const row = document.getElementById(rowId);
            const readonlyContents = row.querySelectorAll('.readonly-content');
            const editFields = row.querySelectorAll('.edit-field');
            const readonlyActions = row.querySelector('.readonly-actions');
            const editActions = row.querySelector('.edit-actions');

            // Restore original values
            const original = originalValues.get(rowId);
            if (original) {
                const codeInput = row.querySelector('textarea[name="Code"]');
                const categorySelect = row.querySelector('select[name="CategoryId"]');

                if (codeInput) codeInput.value = original.code;
                if (categorySelect) categorySelect.value = original.categoryId;

                // Update category type display
                updateCategoryTypeDisplay(row, original.categoryId);
            }

            // Switch back to readonly mode
            readonlyContents.forEach(content => content.classList.remove('d-none'));
            editFields.forEach(field => field.classList.add('d-none'));
            readonlyActions.classList.remove('d-none');
            editActions.classList.add('d-none');

            // Remove from stored values
            originalValues.delete(rowId);
        }

        // Update category type display when category changes
        function updateCategoryTypeDisplay(row, categoryId) {
            const categorySelect = row.querySelector('.category-field');
            const categoryTypeDisplay = row.querySelector('.category-type-display');

            if (categorySelect && categoryTypeDisplay) {
                const selectedOption = categorySelect.querySelector(`option[value="${categoryId}"]`);
                if (selectedOption) {
                    categoryTypeDisplay.textContent = selectedOption.getAttribute('data-category-type') || '';
                }
            }
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Add event listeners to all category selects for live updates
            document.querySelectorAll('.category-field').forEach(select => {
                select.addEventListener('change', function() {
                    const row = this.closest('tr');
                    const categoryId = this.value;
                    updateCategoryTypeDisplay(row, categoryId);
                });
            });

            // Initialize category type displays
            document.querySelectorAll('tr[id^="row-"]').forEach(row => {
                const categorySelect = row.querySelector('.category-field');
                if (categorySelect) {
                    const categoryId = categorySelect.value;
                    updateCategoryTypeDisplay(row, categoryId);
                }
            });

            // Dynamic subcategory loading for create modal
            const createCategorySelect = document.querySelector('#createCategorySelect');
            const createSubCategorySelect = document.querySelector('#createSubCategorySelect');

            if (createCategorySelect && createSubCategorySelect) {
                createCategorySelect.addEventListener('change', function() {
                    const categoryId = this.value;
                    loadSubCategories(categoryId, createSubCategorySelect);
                });

                // Also load subcategories when the modal is opened (in case a category is already selected)
                const createSkillModal = document.getElementById('createSkillModal');
                if (createSkillModal) {
                    createSkillModal.addEventListener('show.bs.modal', function() {
                        const currentCategoryId = createCategorySelect.value;
                        if (currentCategoryId) {
                            loadSubCategories(currentCategoryId, createSubCategorySelect);
                        }
                    });
                }
            }
        });

        function confirmDelete(skillId, skillName) {
            document.getElementById('deleteSkillId').value = skillId;
            document.getElementById('deleteSkillName').textContent = skillName;
            new bootstrap.Modal(document.getElementById('deleteConfirmModal')).show();
        }

    </script>
    }

@functions {

    private string GetSortUrl(string sortField)
    {
        var currentSort = Model.SortBy;
        var newSort = "";

        if (currentSort == $"{sortField}Asc")
        {
            newSort = $"{sortField}Desc";
        }
        else
        {
            newSort = $"{sortField}Asc";
        }

        return Url.Page("", new
        {
            SelectedCategoryType = Model.SelectedCategoryType,
            SortBy = newSort,
            PageNumber = 1
        });
    }

    private string GetSortIcon(string sortField)
    {
        var currentSort = Model.SortBy;

        if (currentSort == $"{sortField}Asc")
        {
            return "<i class='bi bi-arrow-up'></i>";
        }
        else if (currentSort == $"{sortField}Desc")
        {
            return "<i class='bi bi-arrow-down'></i>";
        }

        return "<i class='bi bi-arrow-down-up text-muted'></i>";
    }
   

}