@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Render the Styles section if defined -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary border-bottom mb-3">
            <div class="container">
                <!-- Brand on the left -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-diagram-3 me-2"></i>SkillManager
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Skills/Index">
                                <i class="bi bi-search me-1"></i> My Skills
                            </a>
                        </li>
                      
                    </ul>

                    <!-- Display username and roles on the right -->
                    <span class="navbar-text text-white">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var username = User.Identity?.Name ?? "Unavailable";
                            var roles = string.Join(", ", User.Claims
                            .Where(c => c.Type == ClaimTypes.Role)
                            .Select(c => c.Value));

                            <i class="bi bi-person-circle me-1"></i>
                            @($"{username} ({roles})")
                        }
                        else
                        {
                            <text><i class="bi bi-person-x me-1"></i>Not logged in</text>
                        }
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - SkillManager
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Render the Scripts section if defined -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>