@page
@model SkillManager.Web.Pages.Skills.ManageCategoryModel
@{
    ViewData["Title"] = "Category Management";

    // Helper functions for tab activation
    string GetTabActiveClass(string tabName)
    {
        if (Model.EditCategoryId.HasValue && tabName == "categories") return "active";
        if (Model.EditCategoryTypeId.HasValue && tabName == "category-types") return "active";
        if (Model.EditSubCategoryId.HasValue && tabName == "subcategories") return "active";
        return tabName == "categories" ? "active" : "";
    }

    string GetTabPaneActiveClass(string tabName)
    {
        if (Model.EditCategoryId.HasValue && tabName == "categories") return "show active";
        if (Model.EditCategoryTypeId.HasValue && tabName == "category-types") return "show active";
        if (Model.EditSubCategoryId.HasValue && tabName == "subcategories") return "show active";
        return tabName == "categories" ? "show active" : "";
    }
}

<div class="container-fluid">
    <!-- Header with Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-4">Category Management</h2>
        <a href="/skills/Manage" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>

    <!-- Debug Info -->
    <div class="alert alert-info d-none">
        Debug:
        EditCategoryId: @(Model.EditCategoryId?.ToString() ?? "null") |
        EditCategoryTypeId: @(Model.EditCategoryTypeId?.ToString() ?? "null") |
        EditSubCategoryId: @(Model.EditSubCategoryId?.ToString() ?? "null")
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs mb-4" id="categoryTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @GetTabActiveClass("categories")" id="categories-tab" data-bs-toggle="tab" data-bs-target="#categories" type="button" role="tab">
                Categories (@Model.Categories.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @GetTabActiveClass("category-types")" id="category-types-tab" data-bs-toggle="tab" data-bs-target="#category-types" type="button" role="tab">
                Category Types (@Model.CategoryTypes.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @GetTabActiveClass("subcategories")" id="subcategories-tab" data-bs-toggle="tab" data-bs-target="#subcategories" type="button" role="tab">
                SubCategories
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="categoryTabsContent">
        <!-- Categories Tab -->
        <div class="tab-pane fade @GetTabPaneActiveClass("categories")" id="categories" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                @(Model.EditCategoryId.HasValue ? "Edit Category" : "Create New Category")
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.EditCategoryId.HasValue)
                            {
                                <form method="post" asp-page-handler="UpdateCategory">
                                    <input type="hidden" name="id" value="@Model.EditCategoryId" />
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" name="UpdateCategoryDto.Name" value="@Model.UpdateCategoryDto.Name" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Category Type</label>
                                        <select class="form-select" name="UpdateCategoryDto.CategoryTypeId" required>
                                            <option value="">Select Category Type</option>
                                            @foreach (var type in Model.CategoryTypes)
                                            {
                                                <option value="@type.CategoryTypeId" selected="@(type.CategoryTypeId == Model.UpdateCategoryDto.CategoryTypeId)">@type.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>Update Category
                                        </button>
                                        <button type="button" class="btn btn-secondary" onclick="clearEditMode()">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="CreateCategory">
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" asp-for="CreateCategoryDto.Name" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Category Type</label>
                                        <select class="form-select" asp-for="CreateCategoryDto.CategoryTypeId" required>
                                            <option value="">Select Category Type</option>
                                            @foreach (var type in Model.CategoryTypes)
                                            {
                                                <option value="@type.CategoryTypeId">@type.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus me-1"></i>Create Category
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">All Categories</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Category Type</th>
                                            <th>SubCategories</th>
                                            <th>Skills</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <tr>
                                                <td>@category.Name</td>
                                                <td>@category.CategoryTypeName</td>
                                                <td>
                                                    <span class="badge bg-info">@(category.SubCategories?.Count ?? 0)</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@category.SkillCount</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="?editCategoryId=@category.CategoryId"
                                                           class="btn btn-outline-primary" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form method="post" asp-page-handler="DeleteCategory" class="d-inline">
                                                            <input type="hidden" name="id" value="@category.CategoryId" />
                                                            <button type="submit" class="btn btn-outline-danger"
                                                                    onclick="return confirm('Are you sure you want to delete this category?')" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Types Tab -->
        <div class="tab-pane fade @GetTabPaneActiveClass("category-types")" id="category-types" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                @(Model.EditCategoryTypeId.HasValue ? "Edit Category Type" : "Create New Category Type")
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.EditCategoryTypeId.HasValue)
                            {
                                <form method="post" asp-page-handler="UpdateCategoryType">
                                    <input type="hidden" name="id" value="@Model.EditCategoryTypeId" />
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" name="UpdateCategoryTypeDto.Name" value="@Model.UpdateCategoryTypeDto.Name" required />
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>Update Category Type
                                        </button>
                                        <button type="button" class="btn btn-secondary" onclick="clearEditMode()">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="CreateCategoryType">
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" asp-for="CreateCategoryTypeDto.Name" required />
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus me-1"></i>Create Category Type
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">All Category Types</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Categories</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var type in Model.CategoryTypes)
                                        {
                                            <tr>
                                                <td>@type.Name</td>
                                                <td>
                                                    <span class="badge bg-info">@type.CategoryCount</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="?editCategoryTypeId=@type.CategoryTypeId"
                                                           class="btn btn-outline-primary" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form method="post" asp-page-handler="DeleteCategoryType" class="d-inline">
                                                            <input type="hidden" name="id" value="@type.CategoryTypeId" />
                                                            <button type="submit" class="btn btn-outline-danger"
                                                                    onclick="return confirm('Are you sure you want to delete this category type?')" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- SubCategories Tab -->
        <div class="tab-pane fade @GetTabPaneActiveClass("subcategories")" id="subcategories" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                @(Model.EditSubCategoryId.HasValue ? "Edit SubCategory" : "Create New SubCategory")
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.EditSubCategoryId.HasValue)
                            {
                                <form method="post" asp-page-handler="UpdateSubCategory">
                                    <input type="hidden" name="id" value="@Model.EditSubCategoryId" />
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" name="UpdateSubCategoryDto.Name" value="@Model.UpdateSubCategoryDto.Name" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Category</label>
                                        <select class="form-select" name="UpdateSubCategoryDto.CategoryId" required>
                                            <option value="">Select Category</option>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <option value="@category.CategoryId" selected="@(category.CategoryId == Model.UpdateSubCategoryDto.CategoryId)">@category.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>Update SubCategory
                                        </button>
                                        <button type="button" class="btn btn-secondary" onclick="clearEditMode()">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="CreateSubCategory">
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" asp-for="CreateSubCategoryDto.Name" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Category</label>
                                        <select class="form-select" asp-for="CreateSubCategoryDto.CategoryId" required id="subCategoryCategorySelect">
                                            <option value="">Select Category</option>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <option value="@category.CategoryId">@category.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus me-1"></i>Create SubCategory
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Browse SubCategories</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Filter by Category</label>
                                    <select class="form-select" id="categoryFilter">
                                        <option value="">All Categories</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Skills</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="subcategoriesTableBody">
                                        <tr>
                                            <td colspan="4" class="text-center">
                                                <div class="spinner-border" role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clearEditMode() {
            // Remove all edit parameters from URL and reload
            const url = new URL(window.location.href);
            url.searchParams.delete('editCategoryId');
            url.searchParams.delete('editCategoryTypeId');
            url.searchParams.delete('editSubCategoryId');
            window.location.href = url.toString();
        }

        document.addEventListener('DOMContentLoaded', function() {
            const categoryFilter = document.getElementById('categoryFilter');
            const tableBody = document.getElementById('subcategoriesTableBody');

            function loadSubCategories(categoryId = '') {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </td>
                    </tr>
                `;

                fetch(`?handler=SubCategoriesByCategory&categoryId=${categoryId}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            tableBody.innerHTML = `<tr><td colspan="4" class="text-center text-danger">Error: ${data.error}</td></tr>`;
                            return;
                        }

                        if (data.length === 0) {
                            tableBody.innerHTML = `<tr><td colspan="4" class="text-center">No subcategories found</td></tr>`;
                            return;
                        }

                        tableBody.innerHTML = data.map(subCategory => `
                            <tr>
                                <td>${subCategory.name}</td>
                                <td>${subCategory.categoryName}</td>
                                <td><span class="badge bg-secondary">${subCategory.skillCount}</span></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="?editSubCategoryId=${subCategory.subCategoryId}"
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" asp-page-handler="DeleteSubCategory" class="d-inline">
                                            <input type="hidden" name="id" value="${subCategory.subCategoryId}" />
                                            <button type="submit" class="btn btn-outline-danger"
                                                    onclick="return confirm('Are you sure you want to delete this subcategory?')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        `).join('');
                    })
                    .catch(error => {
                        console.error('Error loading subcategories:', error);
                        tableBody.innerHTML = `<tr><td colspan="4" class="text-center text-danger">Error loading subcategories</td></tr>`;
                    });
            }

            // Load all subcategories initially
            loadSubCategories();

            // Load subcategories when filter changes
            if (categoryFilter) {
                categoryFilter.addEventListener('change', function() {
                    loadSubCategories(this.value);
                });
            }
        });
    </script>
}